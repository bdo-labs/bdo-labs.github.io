{
  "source": "repos",
  "metadata": {
    "title": "BDO labs",
    "description": "Documentation, guidelines and showcases"
  },
  "plugins": {
    "metalsmith-collections": {
      "repos": "./repos/*.md"
    },
    "metalsmith-markdown": {
      "gfm": true,
      "smartypants": true,
      "tables": true
    },
    "metalsmith-permalinks": {
      "pattern": ":title"
    },
    "metalsmith-templates": {
      "engine": "swig",
      "directory": "./lib/templates"
    }
  }
}
